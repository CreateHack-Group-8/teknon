# Development Dockerfile for tools like Prisma Studio
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy Prisma schema
COPY prisma ./prisma/

# Generate Prisma client
RUN npx prisma generate

# Expose port for Prisma Studio
EXPOSE 5555

# Default command (can be overridden)
CMD ["npm", "run", "prisma:studio"]
